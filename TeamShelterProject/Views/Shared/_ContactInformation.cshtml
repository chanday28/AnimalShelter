@model IEnumerable<TeamShelterProject.Models.Person>

<table class="table">
    <tr>
        <th>
            Shelter Name
        </th>
        <th>
            Address
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Administrator
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.personRole == 0)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.streetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
                @Html.DisplayFor(modelItem => item.surname)
            </td>
        </tr>
    }
}

</table>
